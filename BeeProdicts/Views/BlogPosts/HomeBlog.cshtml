@model IEnumerable<BlogPosts>

<head>
    <link rel="stylesheet" href="~/css/ShopAll.css" asp-append-version="true" />
</head>


<body>

        

    <div style="height:300px;"></div>


    <div class="container text-center">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">

                    <img class="bd-placeholder-img card-img-top aspect-ratio-object" src="@item.BlogImage" alt="Card image"></img>
                    <div class="card-body ">
                        <p class="card-text product-information">@item.BlogImage</p>
                        
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">

                            <a type="btn btn-success" asp-controller="Details" asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-secondary">Details</a>

                        </div>

                    </div>

                </div>
            }
        </div>
    </div>
</body>