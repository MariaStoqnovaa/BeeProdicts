<head>
    <link rel="stylesheet" href="~/css/ClubSheet.css" asp-append-version="true" />
</head>


<body>

    <div class="album py-5 bg-light">

        <div id="demo" class="carousel slide" data-bs-ride="carousel">

            <!-- Indicators/dots -->
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
            </div>

            <!-- The slideshow/carousel -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/image/showAllPic1.jpg" alt="fistImageOfShowAll" class="d-block" style="width:100%; height: 700px">
                    <div class="carousel-caption">
                        <a class="btn btn-outline-light my-bth" asp-area="" asp-controller="HoneyProduct" asp-action="Types" asp-route-id="3">SHOP HIVES</a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/image/showAllPic2.jpg" alt="secondImageOfShowAll" class="d-block" style="width:100%; height: 700px">
                    <div class="carousel-caption">
                        <a class="btn btn-outline-light  my-bth" asp-area="" asp-controller="HoneyProduct" asp-action="Types" asp-route-id="2">SHOP FRAMES</a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/image/showAllPic3.png" alt="thirdImageOfShowAll" style="width:100%; height: 700px">
                    <div class="carousel-caption">
                        <a class="btn btn-outline-light  my-bth" asp-area="" asp-controller="HoneyProduct" asp-action="Types" asp-route-id="1">SHOP FOUNDATION</a>
                    </div>
                </div>
            </div>

            <!-- Left and right controls/icons -->
            <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>

    <div style="height:300px;"></div>


    <div class="container text-center">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">

                    <img class="bd-placeholder-img card-img-top aspect-ratio-object" src="@item.Image" alt="Card image"></img>
                    <div class="card-body ">
                        <p class="card-text product-information">@item.Name</p>
                        <p class="card-text price">@item.Price $</p>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">

                            <a type="btn btn-success" asp-controller="Details" asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-secondary">Details</a>

                        </div>

                    </div>

                </div>
            }
        </div>
    </div>
</body>*@