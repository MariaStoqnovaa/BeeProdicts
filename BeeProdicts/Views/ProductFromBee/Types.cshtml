@model IEnumerable<Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container text-center">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">

                <img class="bd-placeholder-img card-img-top aspect-ratio-object" src="@item.Image" alt="Card image"></img>
                <div class="card-body ">
                    <p class="card-text product-information">@item.Name</p>
                    <p class="card-text price">@item.Price $</p>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">

                        <a type="btn btn-success" asp-controller="Details" asp-action="Details" asp-route-id="@item.Id"
                           class="btn btn-sm btn-outline-secondary">Details</a>

                    </div>

                </div>

            </div>
        }
    </div>
</div>