<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeeProdicts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   @* <link rel="stylesheet" href="~/css/ShopAll.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/css/DetailPage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/HomePage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeeProdicts.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/image/logo.png" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @*topNav*@
                    <ul class="navbar-nav ms-auto">

                        <div class="dropdown">
                            <button class="dropbtn">BLOG</button>
                            <div class="dropdown-content">
                                <a class="dropdown-item" asp-controller="BlogPosts" asp-action="Index">Create</a>
                                <a class="dropdown-item" asp-controller="BlogPosts" asp-action="HomeBlog">Home Blog</a>
                            </div>
                        </div>

                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Partner" asp-action="Index">PARTNERS</a>
                        </li>
                        

                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Contact" asp-action="Index">CONTACT</a>
                        </li>

                        <div class="dropdown">
                            <button class="dropbtn">Supplies</button>
                            <div class="dropdown-content">
                                <a class="dropdown-item" asp-controller="Product" asp-action="Index">Create</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="ShopAll">Shop All</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="Types" asp-route-id="1">Foundation</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="Types" asp-route-id="2">Frames</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="Types" asp-route-id="3">Hives Bodies</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="Types" asp-route-id="4">Accessories</a>
                                <a class="dropdown-item" asp-controller="ProductFromBee" asp-action="Index">Create</a>
                              @*  <a class="dropdown-item" asp-controller="ProductFromBee" asp-action="ShopAllHoney">Shop All</a>*@
                                <a class="dropdown-item" asp-controller="Product" asp-action="Types" asp-route-id="5">Honey</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="Types" asp-route-id="6">Propolis</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="Types" asp-route-id="7">Bee Wax</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="Types" asp-route-id="8">Candles</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="Types" asp-route-id="9">Jar</a>
                            </div>
                        </div>
                    </ul>
                </div>

                 <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial.cshtml"></partial>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BeeProdicts - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
